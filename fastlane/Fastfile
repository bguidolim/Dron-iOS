default_platform(:ios)
fastlane_version('2.94.0')

platform :ios do
  before_all do
    xcversion(version: '~> 9.3')
    ensure_git_status_clean
  end

  after_all do
    clean_build_artifacts
    reset_git_repo(force: true)
  end

  desc 'Build and deploy to TestFlight for Beta Testing'
  lane :beta do
    carthage(
      platform: 'iOS',
      cache_builds: true
    )
    match
    automatic_code_signing(
      use_automatic_signing: false,
      profile_name: ENV['sigh_com.guidolim.Dron_appstore_profile-name'],
      team_id: 'JW682CU4GW',
      code_sign_identity: 'iPhone Distribution'
    )
    increment_build_number(
      build_number: ENV['BITRISE_BUILD_NUMBER']
    )
    add_badge(
      alpha: true,
      shield: "Build-#{get_build_number}-orange",
      glob: '/Dron/**/*.appiconset/*.{png,PNG}'
    )
    gym
    pilot
    download_dsyms(
      version: get_version_number,
      build_number: get_build_number
    )
    upload_symbols_to_crashlytics
  end
end
